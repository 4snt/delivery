# Neon Database Configuration (Already configured in Vercel)
# These variables are automatically provided by Neon integration in Vercel

# POSTGRES_PRISMA_URL - Pooled connection (for Prisma queries)
# POSTGRES_URL_NON_POOLED - Direct connection (for migrations)
# POSTGRES_URL - Standard connection string
# POSTGRES_HOST - Database host
# NEON_PROJECT_ID - Neon project identifier

# NextAuth Configuration
NEXTAUTH_URL="https://your-app.vercel.app"
NEXTAUTH_SECRET="your-nextauth-secret-generate-with-openssl-rand-base64-32"

# Google OAuth (optional)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# JWT Configuration
JWT_SECRET="your-jwt-secret-generate-with-openssl-rand-base64-32"
JWT_EXPIRES_IN="7d"

# Admin Secret (for creating admin users)
ADMIN_SECRET="your-admin-secret"
